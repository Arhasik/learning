
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Base.Theme.APP7" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    <item name="android:windowContentTransitions">true</item>  <!-- Включаем волшебство -->
    <item name="android:windowEnterTransition">@android:transition/slide_left</item>  <!-- Новая комната въезжает слева -->
    <item name="android:windowExitTransition">@android:transition/slide_right</item>  <!-- Старая уезжает вправо -->
    <item name="android:windowReenterTransition">@android:transition/slide_right</item> <!-- Возврат справа -->
    <item name="android:windowReturnTransition">@android:transition/slide_left</item>  <!-- Уход влево -->
</style>
<style name="Theme.APP7" parent="Base.Theme.APP7" />
</resources>